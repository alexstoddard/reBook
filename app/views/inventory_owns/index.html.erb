<% if session[:user_name].nil? %>
<h1>Listing all owned books</h1>
<% else %>
<h1>Listing all of <%=session[:user_name] %>'s owned books</h1>
<% end %>
<br><br>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th>Condition</th>
      <th>Image</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @inventory_owns.each do |inventory_own| %>
      <tr>
        <td><%= inventory_own.user.username %></td>
        <td><%= inventory_own.book.name %></td>
        <td><%= inventory_own.condition %></td>
        <td><img src="<%= inventory_own.book.thumbnail %>"></td>
        <td><%= link_to 'Remove', inventory_own, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
