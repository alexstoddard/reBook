<h1>All books that users have</h1>
<br><br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th>Author</th>
      <th>Edition</th>
      <th>Price</th>
      <th>Googleid</th>
      <th>Thumbnail</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.subject %></td>
        <td><%= book.author %></td>
        <td><%= book.edition %></td>
        <td><%= book.price %></td>
        <td><%= book.googleId %></td>
        <td><image src="<%= book.thumbnail %>"></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
