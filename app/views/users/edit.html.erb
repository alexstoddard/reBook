<div id="main">
  <div id="edit-user">
		<h1>Update Your Account Information</h1>

    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div class="error">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

	<div id="imgsection">
		<%= f.label :image, "Choose Your Avatar:", id: "choose-avatar-label" %>
		<%= f.select :image,[['Dragon', 'dragon.png'],['Bunny', 'bunny.png'],['Snake', 'snake.png'],['Dog', 'dog.png'],
									 ['Lamb', 'lamb.png'],['Horse', 'horse.png'],['Pig', 'pig.png'],['Mouse', 'mouse.png'],
									 ['Cow', 'cow.png'],['Tiger', 'tiger.png'],['Monkey', 'monkey.png'],['Chicken', 'chicken.png'],['Miley', 'miley.png']] %>	
		<div class="user_image">
			<%= image_tag(@user.image, alt: "userimage", class: 'img') %>
		</div>
	</div>
	
  <p><%= f.label :first, "First Name" %>
  <%= f.text_field :first %></p>

  <p><%= f.label :last, "Last Name" %>
  <%= f.text_field :last %></p>

	<p><%= f.label :old_passhash, "Old Password" %>
  <%= f.password_field :old_passhash  %></p>

	<p><%= f.label :passhash, "Create a New Password" %>
  <%= f.password_field :passhash %></p>

	<p><%= f.label :passhash_confirmation, "Confirm Your New Password" %>
  <%= f.password_field :passhash_confirmation %></p>
  
	<p><%= f.label :email, "Email Address" %>
  <%= f.text_field :email %></p>

  <p><%= f.label :timezone, "Time Zone" %>
  <%= select(:user, :timezone, time_zone_options_for_select(selected = @user.timezone) ) %></p>
  
  <%= f.submit "Update", class: "button" %>
<% end %>
  </div>
</div>
