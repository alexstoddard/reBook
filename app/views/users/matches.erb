<% @number = 1 %>
<% @records.each do |x| %>
<h2>Trade Number <%= @number %> </h2>
<b>From: </b><%= x["user_from"] %></br>
<b>To: </b><%= x["user_to"] %></br>
<b>Trade Book: </b><%= x["from_title"] %></br>
<%= image_tag x["from_thumb"] %></br>
<b>Get Book: </b><%= x["to_title"] %></br>
<%= image_tag x["to_thumb"] %></br>
<% @number = @number + 1 %>
</br>
<% end %>
