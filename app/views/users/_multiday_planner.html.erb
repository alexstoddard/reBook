<script type="text/javascript">
  $(function() {
    $('.day-planner td').tooltip({
      tooltipClass: 'availTip'
    });

  });
</script>

<div class="day-planner">
  <table>
    <tr>
      <td></td>
      <% schedule.keys.each do |day| %>
        <td class="day" cellpadding="5"><%= day[0,2] %></td>
      <% end %>
    </tr>
    <% (0..47).each do |minute| %>
    <tr>
       <% hour = ((minute%24)/2) %>
        <% if hour == 0 %>
        <% hour = 12 %>
        <% end %>
        <% if minute > 23 %>
        <% ampm = "pm" %>
        <% else %>
        <% ampm = "am" %>
        <% end %>
      <% if minute % 4 == 0 %>
      <td class = "hour" rowspan="4">
        <%= hour.to_s + " " + ampm %>
      </td>
      <% end %>
      <% schedule.keys.each do |day| %>
        <% if minute % 2 == 0
            min = ":00"
          else 
            min = ":30"
          end %>
        <% if schedule[day][minute] == 0 %>
         <td class="count-0 time-slot"></td>
        <% elsif schedule[day][minute] == 1 %>
          <td class="count-1 time-slot" title="<%= hour.to_s + min + ampm %>"></td>
        <% elsif schedule[day][minute] == 2 %>
          <td class="count-2 time-slot" title="<%= hour.to_s + min + ampm %>"></td>
        <% else schedule[day][minute] == 3 %>
          <td class="count-3 time-slot" title="<%= hour.to_s + min + ampm %>"></td>
        <% end %>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>
