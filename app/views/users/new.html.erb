<div id="wrappermain">
	<div id="main">
		<h1>Create your ReBook Account</h1>
		
		<%= form_tag("/users", method: "post") do %>
	        <h3>Name</h3>
	        <%= text_field_tag('user[first]', nil, id: nil, placeholder: "First", class: "text") %>
	       	<%= text_field_tag('user[last]', nil, id: nil, placeholder: "Last", class: "text") %>

	       	<h3>Choose your username</h3>
	       	<%= text_field_tag('user[username]', nil, id: nil, class: "text") %>

	       	<h3>Create a password</h3>
	       	<%=password_field_tag('user[passhash]', nil, id: nil, class: "text") %>

	       	<h3>Confirm your password</h3>
	       	<%= password_field_tag('user[passhash_confirmation]', nil, id: nil, class: "text") %>

	       	<h3>Your current email address</h3>
	       	<%= text_field_tag('user[email]', nil, id: nil, class: "text") %>

	       	<h3>Location</h3>
	       	<%= select_tag('user[location]', options_from_collection_for_select(@locations, 'id', 'name'), class: "text") %>

	       	<h3>Role at Location</h3>
	       	<%= text_field_tag('user[location_description]', nil, id: nil, class: "text") %>

			<br />
			<br />

	        <%= submit_tag("Save changes!", id: nil, class: "button") %>
	    <% end %>
	</div>
</div>
