<div id="main">
<div id="wrapperuserinfo">

	<div id="userinfo">

		<h1>Edit Your Schedule</h1>

    <div id="locations">
      <%= form_tag locations_path, :method => :get, :remote => true, :id => "location_form" do %>

      <div class="field" id="location-results">
        <%= label_tag :search, "Add locations to your profile:"%><br>
        <%= hidden_field_tag :user_id, @user.id %>
        <%= text_field_tag :search, params[:search], :id => "searcher", :autocomplete =>"off" %>
        <%= submit_tag "Search", :name => nil %>
      </div>


      <% end %>
    <div class="field" id="loclist">
      <%= render :partial => 'location_results' %>
    </div>
    </br>
	  </div>
    <div id="userlocs">
      <%= render :partial => 'user_locations' %>
    </div>
	</div>
</div>
</div>
